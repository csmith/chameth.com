{{/* gotype: chameth.com/chameth.com/content/shortcodes/recentfilms.Data*/}}
<ol class="recent-films">
{{- range .Films }}
  <li>
    <a href="{{ .Path }}">
      <img src="{{ .PosterPath }}" alt="Poster of {{ .Title }}" loading="lazy">
      <time>{{ .Date }}</time>
      <div>{{ .Stars }}</div>
    </a>
  </li>
{{- end }}
</ol>
